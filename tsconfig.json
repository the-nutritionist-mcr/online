{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "types": ["node", "vitest/globals"],
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "resolvePackageJsonExports": false,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@tnmo/aws": ["./src/core/aws/index.ts"],
      "@tnmo/types": ["./src/types/index.ts"],
      "@tnmo/admin-app": ["./src/admin-app/index.ts"],
      "@tnmo/constants": ["./src/constants/index.ts"],
      "@tnmo/authorise-cognito-jwt": ["./src/authorise-cognito-jwt/index.ts"],
      "@tnmo/utils": ["./src/utils/index.ts"],
      "@tnmo/meal-planning": ["./src/meal-planning/index.ts"],
      "@tnmo/components": ["./src/components/index.ts"],
      "@tnmo/config": ["./src/config/index.ts"],
      "@tnmo/static-pages": ["./src/static-pages/index.ts"],
      "@tnmo/seed-cognito": ["./src/seed-cognito/index.ts"],
      "@tnmo/seed-dynamo": ["./src/seed-dynamo/index.ts"],
      "@tnmo/dynamo": ["./src/dynamo/index.ts"],
      "@tnmo/image-optimisation": ["./src/image-optimisation/index.ts"],
      "@tnmo/core": ["./src/core/index.ts"],
      "@tnmo/core-backend": ["./src/core-backend/index.ts"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "tnm-docs"],
  "$schema": "https://json.schemastore.org/tsconfig"
}
